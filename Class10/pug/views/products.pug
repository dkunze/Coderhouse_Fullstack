doctype html
html(lang="en")
    include partials/head.pug
    body 
        div(class="container mt-5 p-3")
            h3 Listado de Productos con PUG
            table(class="table table-dark")                
                thead
                    tr
                        th(scope="col") ID
                        th(scope="col") Titulo
                        th(scope="col") Precio
                        th(scope="col") Imagen URL            
                tbody
                    if data.length > 0
                        each item in data 
                            tr
                                th(scope="row")=item.id
                                td=item.title
                                td=item.price
                                td
                                    img(style="width:100px;height:100px;" src=item.thumbnail)       
                    else
                        tr 
                            th(scope="row")
                            td No hay productos
                            td 
                            td                                 
            div.mt-5
                a(href="/" class="btn btn-success") Carga de Productos        